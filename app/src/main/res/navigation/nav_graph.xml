<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/postListRvFragment">

    <fragment
        android:id="@+id/postListRvFragment"
        android:name="com.finalProject.travelTogether.feed.PostListRvFragment"
        android:label="Posts"
        tools:layout="@layout/fragment_posts_list">
        <action
            android:id="@+id/action_postListRvFragment_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="com.finalProject.travelTogether.feed.PostDetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_post_details">
        <argument
            android:name="postId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.finalProject.travelTogether.common.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
    <action android:id="@+id/action_global_aboutFragment" app:destination="@id/aboutFragment" />
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.finalProject.travelTogether.feed.AddPostFragment"
        android:label="Add New Post"
        tools:layout="@layout/fragment_add_post" />
    <action android:id="@+id/action_global_addPostFragment" app:destination="@id/addPostFragment" />
</navigation>